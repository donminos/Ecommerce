<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>405</error-code>
        <location>/errorUsuario.html</location>
    </error-page>
    <security-constraint>
        <display-name>Privado</display-name>
        <web-resource-collection>
            <web-resource-name>Clientes</web-resource-name>
            <description/>
            <url-pattern>/private/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description>Clientes</description>
            <role-name>Cliente</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>ecommerRealm</realm-name>
        <form-login-config>
            <form-login-page>/login.html</form-login-page>
            <form-error-page>/login.html?error=true</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>Administrador</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>Cliente</role-name>
    </security-role>
    <ejb-ref>
        <ejb-ref-name>ProductosSession</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>com.sysio.ecommerce.data.session.ProductosSessionRemote</remote>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>CategoriasSession</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>com.sysio.ecommerce.data.session.CategoriasSessionRemote</remote>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>ImagenesSession</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>com.sysio.ecommerce.data.session.ImagenesSessionRemote</remote>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>CarroCompraSession</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>com.sysio.ecommerce.data.session.CarroCompraSessionRemote</remote>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>UsuariosSession</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>com.sysio.ecommerce.data.session.UsuariosSessionRemote</remote>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>DatosUsuarioSession</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>com.sysio.ecommerce.data.session.DatosUsuarioSessionRemote</remote>
    </ejb-ref>
    <ejb-ref>
        <ejb-ref-name>UsuarioRolSession</ejb-ref-name>
        <ejb-ref-type>Session</ejb-ref-type>
        <remote>com.sysio.ecommerce.data.session.UsuarioRolSessionRemote</remote>
    </ejb-ref>
</web-app>
